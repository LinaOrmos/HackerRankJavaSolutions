//First we start the code
public class VariableExamples {   
public static void main(String[] args) {
int num=500;
System.out.println("The number is:"+ num);
String binnum= Integer.toBinaryString(num);
System.out.println("The binary number is: "+binnum);
//0b for Binary
System.out.println("The Binary number in Java: "+0b111000010);
System.out.println("Number in Hexadecimal:" +Integer.toHexString(num));
//0x for Hex
System.out.println("The hex number in Java: "+0x1F4);
System.out.println("Number in Oct: "+Integer.toOctalString(num));
//0 for Oct
System.out.println("The octal number in Java: " +0764);
}

}
